@model scaffold.Models.TransactionViewModel

<form asp-controller="Bank" asp-action="Transaction" method="post">
    <br>
    
    <span asp-validation-for="amount"></span>
    <input type="number" asp-for="amount" placeholder="Transaction Amount" class="form-control"/>
    <br>

    <span asp-validation-for="transaction_type"></span>
    <select asp-for="transaction_type"  class="form-control">
        <option value="deposit">Deposit</option>
        <option value="withdraw">Withdraw</option>
    </select>
    <br>

    <button class="btn btn-secondary" type="submit">Transact!</button>
</form>