@model scaffold.Models.UserViewModel

<form asp-controller="Home" asp-action="Register" method="post">
    <br>
    <span asp-validation-for="firstName"></span>
    <input asp-for="firstName" placeholder="First Name" class="form-control"/>
    <br>
    <span asp-validation-for="lastName"></span>
    <input asp-for="lastName" placeholder="Last Name" class="form-control"/>
    <br>
    <span asp-validation-for="email"></span>
    <input asp-for="email" placeholder="Email" class="form-control"/>
    <br>
    <span asp-validation-for="password"></span>
    <input asp-for="password" placeholder="Password" class="form-control"/>
    <br>
    <span asp-validation-for="passwordConfirm"></span>
    <input asp-for="passwordConfirm" placeholder="Confirm Password" class="form-control"/>
    <br>
    <button type="submit">Register</button>
</form>
<div asp-validation-summary="All"></div>
